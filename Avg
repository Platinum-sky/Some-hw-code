#include <iostream>

using namespace std;

double avg(double x, double y, double z);

int main() {
	double x, y, z;
	cout << "Enter value y " << endl;
	cin >> y;
	cout << "Enter value x " << endl;
	cin >> x;
	cout << "Enter value z " << endl;
	cin >> z;
	avg(x, y, z);
	return 0;

}

double avg(double x, double y, double z)
{
	
		double avg;
		avg = (x + y + z) / 3;

		cout << "Avg. is " << avg << endl;
		return avg;
	
	return 0.0;
}
