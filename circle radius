#include <iostream>

using namespace std;

int main()
{
	int radius; 

	cout << "Enter the circle radius: "; 
	cin >> radius;

	cout << "Diameter is " << radius * 2.0 << endl;
	cout << "Circumference is " << 2 * 3.14159 * radius << endl;
	cout << "Area is " << 3.14159 * radius * radius << endl;

	return 0;
}
